// 轮播图
    .swiper-container 
        height 2.18rem            
        .swiper-slide
            img 
                height  100%
        .swiper-pagination
            color white
            height  .5rem
            position relative
            z-index 100

            // nav部分

    .top-nav
        position relative
        margin-top -0.35rem
        z-index 2
        text-align center
        height .9rem
        background url('/img/wavebg.png') no-repeat;
        background-size 100% .9rem
        li 
            width 22%
            height  .53rem
            margin-top .3rem
            text-align center
            display inline-block
            a 
                display flex
                flex-direction column
                justify-content center
                align-items center
            a>span 
              color $main-color
              margin-top .03rem
            a>i
                display block
                width .34rem
                height  .34rem
                background url("/img/sc_img_index.png") no-repeat
                background-size 4.1rem 3.5rem
            &.lists a>i
                background-position  -3.4rem -0.75rem
            &.rank a>i
                background-position  -2.6rem -1.165rem
            &.run a>i
                background-position  -2.99rem -1.165rem
            &.his a>i
                background-position  -3.38rem -1.165rem
        
        // 推荐部分
    .Re
        padding 0 .1rem
        background: $main-bg
        .sub-title
            p.logo
                background-position -1.05rem 0
        .content
            display flex
            justify-content space-around
            flex-wrap wrap
            li
                width 29%
                margin-bottom .2rem
                background #fff
                h5
                    padding .08rem 0 .05rem 0
                    color #535252
                    font-size .14rem
                    ellipsis()
                img 
                    width 100%
                p
                    color $main-color
                    margin-bottom .08rem
                    ellipsis()

    // 每日一推

    .light-comic
        background $main-bg
        padding-bottom .15rem
        .sub-title
            width inherit
            padding 0 .1rem
            p.logo
                background-position -2.6rem 0
        .light-comic-recommend
            padding 0 .1rem
            img
                width 100%
                display block
            .bot
                display flex
                justify-content space-between
                align-items center
                height .4rem
                padding 0 .1rem
                background #fff
                .tit
                    font-size .16rem
                    color #535252
                .writer
                    font-size  .12rem
                    color #C5C5C5
        h3
            padding 0 .1rem
            background #fff
            strong 
                display block
                width 1.5rem 
                height .4rem
                background  url('/img/sc_img_index.png') no-repeat -1.05rem -0.9rem
                background-size 4.1rem 3.5rem
        .signIn 
            display flex
            justify-content space-around
            padding-bottom .15rem
            background #fff
            li
                width 45%
                img
                    width 100%
    
    //今日更新
    .day-update
        .sub-title
            width inherit
            padding 0 .1rem
            p.logo
                background-position -1.05rem -1.35rem
        //设置下面的样式
        .day-update-list
            display flex
            aside
                width 1rem
                height 3.5rem
                background url('/img/sc_img_index.png') no-repeat 0 0
                background-size 4.1rem 3.5rem
            .list-box
                margin-right .1rem
                flex 1
                &>li
                    background $main-bg
                    flex 1
                    display flex
                    text-align left
                    margin-bottom .12rem
                    img
                        width .8rem
                        height 1.05rem
                    .mes 
                        padding .14rem .13rem 0
                        h4
                            font-size .16rem
                            color #535252
                        p,span
                            display block
                            font-size .12rem
                            color $main-color
                            margin .07rem 0 0
                        ul
                            display flex
                            padding-top .07rem
                            .star
                                width .11rem
                                height .11rem
                                background url('/img/sc_img_index.png') no-repeat -3.985rem -0.75rem
                                background-size 4.1rem 3.5rem
                            li:last-of-type
                                color #ff9a6a
                                font-size .1rem
                                margin-left .025rem
    
    //日漫经典    因为跟下面这个模块一样，所以选择了复用样式
    .japan-animate,.new-comic
        background $main-bg
        padding-bottom .05rem
        .sub-title
            width inherit 
            padding 0 .1rem
            p.logo
                background-position -1.05rem -2.25rem

        ul
            display flex
            li
                width 28%
                margin-left 4%
                background #fff
                img
                    width 100%
                    margin-bottom .08rem
                h4
                    font-size .13rem
                    color #535252
                    margin-bottom .05rem
                p
                    margin-bottom .075rem
    
    //新品上线
    .new-comic
        .sub-title
            p.logo
                background-position -1.05rem -2.7rem
        .new-comic-list
            li
                h4 
                    width 100%
                    ellipsis()


    //底部
    footer 
        // margin-top .1rem
        height 0.77rem
        background url('/img/bottomBg.png') no-repeat 
        background-size 100% auto
        background-position center bottom
        display flex
        justify-content flex-end
        i
            width .75rem
            height .665rem
            margin-right -0.15rem
            background url('/img/sc_img_index.png') no-repeat -2.6rem -0.45rem
            background-size 4.1rem 3.5rem

        ul
            display flex
            padding-right .2rem
            li
                padding 0 .15rem
                font-size .15rem
                color #535252
                font-weight bold
                text-align center
                line-height .77rem